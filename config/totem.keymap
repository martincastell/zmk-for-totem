            //             ┃     ~     ┃     -     ┃     #     ┃     &     ┃     |     ┃   ┃     `     ┃     {     ┃     }     ┃     _     ┃     ;     ┃
            //             ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫
            //             ┃     ^     ┃     +     ┃     ?     ┃     !     ┃     $     ┃   ┃     '     ┃     (     ┃     )     ┃     [     ┃     ]     ┃
            // ┏━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┓
            // ┃           ┃     %     ┃     *     ┃     @     ┃     :     ┃     \     ┃   ┃     "     ┃     =     ┃     <     ┃     >     ┃     /     ┃           ┃
